{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "emailer/templates/html/*", "watchAssets": true },
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "db/seeding/**/*.yml", "watchAssets": true }
    ],
    "builder": "swc",
    "typeCheck": true
  }
}
